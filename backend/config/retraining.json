{
  "triggers": {
    "min_days_since_last_training": 7,
    "max_days_since_last_training": 30,
    "min_new_samples": 500,
    "performance_threshold": 0.75,
    "max_performance_drop": 0.05,
    "feature_drift_threshold": 0.20,
    "prediction_drift_threshold": 0.15
  },
  "retraining": {
    "incremental_threshold_days": 14,
    "min_samples_incremental": 100,
    "max_new_trees_incremental": 20,
    "test_split": 0.2,
    "cv_folds": 5,
    "hyperparameter_tuning": {
      "enabled": true,
      "method": "grid_search",
      "n_iter": 50
    }
  },
  "deployment": {
    "auto_deploy": false,
    "deployment_strategy": "safe",
    "canary_traffic_percent": 5,
    "rollback_enabled": true,
    "monitoring_duration_hours": 24,
    "performance_validation": {
      "accuracy_threshold": 0.80,
      "latency_threshold_ms": 100,
      "error_rate_threshold": 0.02
    }
  },
  "data": {
    "collection_window_days": 7,
    "min_session_duration": 30000,
    "max_samples_per_collection": 10000,
    "data_retention_days": 90,
    "quality_filters": {
      "min_interactions": 3,
      "min_scroll_depth": 0.2,
      "max_bounce_rate": 0.8
    }
  },
  "monitoring": {
    "enabled": true,
    "alert_channels": ["email", "slack"],
    "metrics_retention_days": 365,
    "performance_monitoring": {
      "accuracy_alert_threshold": 0.05,
      "latency_alert_threshold": 150,
      "drift_alert_threshold": 0.25
    }
  },
  "notifications": {
    "email": {
      "enabled": true,
      "recipients": ["ml-team@company.com"],
      "smtp_server": "smtp.company.com",
      "smtp_port": 587
    },
    "slack": {
      "enabled": false,
      "webhook_url": "https://hooks.slack.com/services/...",
      "channel": "#ml-alerts"
    }
  },
  "backup": {
    "enabled": true,
    "max_versions_to_keep": 10,
    "backup_location": "s3://ml-models-backup/frontend-efimero/",
    "compression": true
  },
  "logging": {
    "level": "INFO",
    "file_path": "logs/retraining.log",
    "max_file_size_mb": 100,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}