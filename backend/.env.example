# Environment variables for Frontend Ef√≠mero Backend
# Copy to .env and fill with your actual values

# Application Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "https://your-frontend.com"]

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ML Models Configuration
MODELS_PATH=models
CLASSIFIER_MODEL_NAME=xgboost_classifier.joblib
REGRESSOR_MODEL_NAME=xgboost_regressor.joblib
SCALER_MODEL_NAME=feature_scaler.joblib

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
MODEL_CACHE_SIZE=1

# Logging
LOG_LEVEL=INFO